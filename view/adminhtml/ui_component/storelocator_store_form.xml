    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">joseph_storelocator_form.storelocator_store_form_data_source</item>
            <item name="deps" xsi:type="string">joseph_storelocator_form.storelocator_store_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Sample Form</item>
        <item name="layout" xsi:type="array">
            <item name="type" xsi:type="string">tabs</item>
        </item>

        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Joseph\StoreLocator\Block\Adminhtml\Store\Edit\BackButton</item>
            <item name="delete" xsi:type="string">Joseph\StoreLocator\Block\Adminhtml\Store\Edit\DeleteButton</item>
            <item name="reset" xsi:type="string">Joseph\StoreLocator\Block\Adminhtml\Store\Edit\ResetButton</item>
            <item name="save" xsi:type="string">Joseph\StoreLocator\Block\Adminhtml\Store\Edit\SaveButton</item>
        </item>




